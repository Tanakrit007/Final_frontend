# Stage 1: Build
FROM node:22-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY client ./client
COPY vite.config.js ./
COPY tailwind.config.cjs ./
COPY postcss.config.cjs ./
COPY index.html ./
RUN npm run build

# Stage 2: Serve with static server
FROM node:22-alpine
WORKDIR /app
RUN npm install -g serve
COPY --from=build /app/dist ./dist
EXPOSE 5173
CMD ["serve", "-s", "dist", "-l", "5173"]